{
	"name": "war-room",
	"version": "0.2.0",
	"description": "WAR ROOM - Offline-first mission & task command app",
	"main": "src/main.js",
	"scripts": {
		"start": "electron .",
		"clean": "rimraf dist || exit 0",
		"build": "npm run clean && electron-builder"
	},
	"devDependencies": {
		"electron": "36.2.0",
		"electron-builder": "26.0.12",
		"rimraf": "6.0.1"
	},
	"build": {
		"appId": "com.moditha.warroom",
		"productName": "WAR ROOM",
		"files": [
			"src/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"win": {
			"icon": "src/warroomicon.ico",
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	}
}
